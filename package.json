{
  "name": "starter-project-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint --continue",
    "lint:css": "turbo run lint:css --continue",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:update": "turbo run test:update",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,css,scss,json,yml,yaml,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,css,scss,json,yml,yaml,html}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "clean": "turbo run clean && rm -rf node_modules && rm -rf pnpm-lock.yaml"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/config-pnpm-scopes": "^20.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "glob": "^10.5.0"
  }
}
