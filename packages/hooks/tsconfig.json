{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["jest"],
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "jest.config.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}
